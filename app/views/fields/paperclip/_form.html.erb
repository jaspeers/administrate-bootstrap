<%= f.label field.attribute, class: "col-lg-2 control-label" %>
<div class="col-lg-6">
  <% if field.image? %>
    <%= link_to(image_tag(field.thumbnail_url, {style: "max-height: 300px;"}), field.url, target: :blank) %>
  <% else %>
    <%= link_to "Download", field.url, target: :blank %>
  <% end %>
  <br/><br/>
  <%= f.file_field field.attribute %>
</div>
